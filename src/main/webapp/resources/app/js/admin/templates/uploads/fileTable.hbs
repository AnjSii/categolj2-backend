<form enctype="multipart/form-data" class="form-horizontal">
    <fieldset>
        <legend>File Upload</legend>
        <div class="form-group">
            <label for="files" class="col col-sm-2 control-label">Files:</label>

            <div class="col col-sm-10">
                <input id="files" name="files" type="file" multiple>
                <span class="help-block hidden"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col col-sm-10 col-sm-offset-2">
                <input id="btn-file-upload" class="btn btn-primary" type="submit" value="Upload files">
            </div>
        </div>
    </fieldset>
</form>

<table class="table table-striped table-bordered table-condensed editable-table">
    <thead>
    <tr>
        <th>id</th>
        <th>name</th>
        <th>preview</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>