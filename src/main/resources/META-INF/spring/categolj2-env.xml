<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:hz="http://www.hazelcast.com/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.hazelcast.com/schema/spring http://www.hazelcast.com/schema/spring/hazelcast-spring-3.2.xsd">

    <bean id="dateFactory" class="org.terasoluna.gfw.common.date.DefaultDateFactory"/>

    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
        <property name="driverClassName" value="${database.driverClassName}"/>
        <property name="jdbcUrl" value="${database.url}"/>
        <property name="username" value="${database.username}"/>
        <property name="password" value="${database.password}"/>
        <property name="autoCommit" value="false"/>
        <property name="maximumPoolSize" value="${cp.maxActive}"/>
        <property name="minimumIdle" value="${cp.minIdle}"/>
        <property name="maxLifetime" value="${cp.maxWait}"/>
        <property name="jdbc4ConnectionTest" value="true"/>
    </bean>

    <bean id="realDataSource" class="com.zaxxer.hikari.HikariDataSource"
          destroy-method="close">
        <constructor-arg ref="hikariConfig"/>
    </bean>

    <bean id="dataSource" class="net.sf.log4jdbc.Log4jdbcProxyDataSource">
        <constructor-arg index="0" ref="realDataSource"/>
    </bean>

    <bean id="flyway" class="com.googlecode.flyway.core.Flyway" init-method="migrate">
        <property name="dataSource" ref="dataSource"/>
        <property name="locations" value="db/migration/${database}"/>
    </bean>

    <bean id="jpaVendorAdapter"
          class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="showSql" value="false"/>
        <property name="database" value="${database}"/>
    </bean>

    <bean
            class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
            id="entityManagerFactory"
            depends-on="flyway">
        <property name="packagesToScan" value="am.ik.categolj2.domain.model"/>
        <property name="dataSource" ref="dataSource"/>
        <property name="jpaVendorAdapter" ref="jpaVendorAdapter"/>
        <property name="mappingResources" value="META-INF/orm.xml"/>
        <property name="jpaPropertyMap">
            <util:map>
                <entry key="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}"/>
                <entry key="hibernate.ejb.naming_strategy"
                       value="org.hibernate.cfg.ImprovedNamingStrategy"/>
                <entry key="hibernate.connection.charSet" value="UTF-8"/>
                <entry key="hibernate.show_sql" value="false"/>
                <entry key="hibernate.format_sql" value="false"/>
                <entry key="hibernate.use_sql_comments" value="true"/>
                <entry key="hibernate.jdbc.batch_size" value="30"/>
                <entry key="hibernate.jdbc.fetch_size" value="100"/>
                <entry key="hibernate.search.default.directory_provider"
                       value="${hibernate.search.default.directory_provider:filesystem}"/>
                <entry key="hibernate.search.default.indexBase"
                       value="${hibernate.search.default.indexBase:/tmp/lucene}"/>
                <entry key="hibernate.search.default.locking_strategy"
                       value="${hibernate.search.default.locking_strategy:single}"/>
                <!--<entry key="hibernate.search.model_mapping" value="am.ik.categolj2.infra.search.SearchMappingFactory"/>-->
                <entry key="hibernate.search.analyzer" value="org.apache.lucene.analysis.cjk.CJKAnalyzer"/>
                <entry key="hibernate.search.lucene_version" value="LUCENE_36"/>
            </util:map>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
    </bean>

    <beans profile="cache.hazelcast">
        <bean id="cacheManager" class="com.hazelcast.spring.cache.HazelcastCacheManager">
            <constructor-arg ref="hazelcastInstance"/>
        </bean>

        <!-- Hazelcast -->
        <hz:hazelcast id="hazelcastInstance">
            <hz:config>
                <hz:group name="${hazelcast.group.name:dev}" password="${hazelcast.group.password:password}"/>
                <hz:properties>
                    <hz:property name="hazelcast.jmx">${hazelcast.jmx:true}</hz:property>
                    <hz:property name="hazelcast.logging.type">slf4j</hz:property>
                </hz:properties>
                <hz:network port="${hazelcast.port:5701}" port-auto-increment="true">
                    <hz:join>
                        <hz:multicast enabled="true"
                                      multicast-group="${hazelcast.multicast.group:224.2.2.3}"
                                      multicast-port="${hazelcast.multicast.port:54327}"/>
                    </hz:join>
                </hz:network>
                <hz:map name="categolj" backup-count="${hazelcast.backup-count:1}">
                    <hz:near-cache max-size="${hazelcast.near-cache.max-size:5000}"
                                   max-idle-seconds="#{1 * 24 * 60 * 60}"
                                   eviction-policy="LRU"
                                   cache-local-entries="true"/>
                </hz:map>
            </hz:config>
        </hz:hazelcast>
    </beans>
    <beans profile="cache.guava">
        <bean id="cacheManager" class="am.ik.categolj2.infra.cache.LoggingGuavaCacheManager">
            <property name="cacheSpecification" value="maximumSize=10000,expireAfterWrite=3d"/>
            <property name="cacheNames">
                <list>
                    <value>entry</value>
                    <value>recentPost</value>
                    <value>link</value>
                    <value>uploadFileSummary</value>
                    <value>accessToken</value>
                    <value>accessTokenAuthentication</value>
                </list>
            </property>
        </bean>
    </beans>
</beans>
